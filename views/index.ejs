<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">
  
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>

  <div class="container">
    <div class="card">
      <header class="card-header">
        <h1><i class='bx bx-check-square'></i> <%= title %></h1>
        <p>Organize suas tarefas de forma simples.</p>
      </header>

      <form class="add-task-form" action="/add" method="POST">
        <input type="text" name="text" placeholder="Qual a próxima tarefa?" required autocomplete="off">
        <button type="submit" aria-label="Adicionar Tarefa">
          <i class='bx bx-plus'></i>
        </button>
      </form>

      <div class="task-list-container">
        <h2>Tarefas</h2>
        <ul class="task-list">
          <% if (tasks.length === 0) { %>
            <li class="task-item empty">
              <span>Nenhuma tarefa por aqui! ✨</span>
            </li>
          <% } else { %>
            <% tasks.forEach(function(task) { %>
              <li class="task-item">
                <span class="task-text"><%= task.text %></span>
                <a href="/delete/<%= task.id %>" class="delete-btn" aria-label="Excluir Tarefa">
                  <i class='bx bxs-trash-alt'></i>
                </a>
              </li>
            <% }); %>
          <% } %>
        </ul>
      </div>
    </div>
    
    <footer>
      <p>Criado com Node.js & Express</p>
    </footer>
  </div>

</body>
</html>